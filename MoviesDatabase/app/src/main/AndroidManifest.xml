<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shahk.moviesdatabase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMovie"
                  android:label="Add Movie"/>
        <activity android:name=".EditActivity"
                  android:label="Edit Activity"/>
        <activity android:name=".DeleteActivity" />
        <activity android:name=".DisplayListYear"
                  android:label="Movies by Year">
            <intent-filter>
                <action android:name="year"/>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".DisplayListRating"
                  android:label="Movies by Rating">
            <intent-filter>
                <action android:name="rating"/>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>

</manifest>